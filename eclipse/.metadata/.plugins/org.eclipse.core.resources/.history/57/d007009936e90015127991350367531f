package com.sythiex.hearthstonemod;

import net.minecraft.client.audio.MovingSound;
import net.minecraft.entity.Entity;
import net.minecraft.item.ItemStack;
import net.minecraft.util.ChatComponentTranslation;
import net.minecraft.util.ResourceLocation;

public class TargetedEntitySound extends MovingSound
{
	private final Entity entity;
	private final ItemStack itemStack;
	private static int maxPlayTime = ItemHearthstone.maxCastTime; // 10sec
	
	public boolean stopSound = false;
	
	public TargetedEntitySound(Entity entity, ItemStack itemStack, ResourceLocation resourceLocation)
	{
		super(resourceLocation);
		this.entity = entity;
		this.itemStack = itemStack;
		this.xPosF = (float) entity.posX;
		this.yPosF = (float) entity.posY;
		this.zPosF = (float) entity.posZ;
		this.repeat = true;
		this.volume = 1.0F;
		this.field_147665_h = 0; // repeat delay
	}
	
	@Override
	public void update()
	{
		System.out.println("Channel sound should be playing");
		if(stopSound)
		{
			System.out.println("ending channel sound");
			this.donePlaying = true;
		}
	}
	
	public void endSound(boolean endSound)
	{
		this.stopSound = endSound;
	}
	
	@Override
	public boolean isDonePlaying()
	{
		return this.donePlaying;
	}
}
