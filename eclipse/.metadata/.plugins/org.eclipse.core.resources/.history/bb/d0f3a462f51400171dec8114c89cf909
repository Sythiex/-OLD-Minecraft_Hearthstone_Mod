package com.sythiex.hearthstonemod.proxy;

import com.sythiex.hearthstonemod.EntityParticleChannelLeaf;

import net.minecraft.client.Minecraft;
import net.minecraft.client.particle.EntityFX;
import net.minecraft.entity.Entity;
import net.minecraft.entity.player.EntityPlayer;

public class ClientProxy extends CommonProxy
{
	@Override
	public void generateChannelParticles(EntityPlayer entity)
	{
		EntityFX particleLeaf1 = new EntityParticleChannelLeaf(entity, entity.worldObj, entity.posX + 0.15,
				entity.posY + 0.5 + entity.worldObj.rand.nextFloat() * entity.height, entity.posZ + 0.75, 0, 0, 0);
		Minecraft.getMinecraft().effectRenderer.addEffect(particleLeaf1);
	}
}